{
	"name": "fade",
	"authors": [
		"Charles Gregory"
	],
	"description": "A minimal D application.",
	"license": "MIT",
	"dependencies": {
		"dparasail":"~>0.3.0",
		"dhtslib": "~>0.13.3+htslib-1.13"
	},
	"preBuildCommands": ["./version.sh"],
	"configurations":[
		{
			"name":"shared",
			"targetType": "executable"
		},
		{
			"name":"static-alpine",
			"targetType": "executable",
			"dflags-ldc": [
				"-link-defaultlib-shared=false",
				"-static",
				"--linker=gold",
				"-L-L/lib", 
				"-L-L/usr/local/lib",
				"-L-L/usr/local/lib64",
				"-L-L/usr/lib",
				"-L-L/usr/local/lib/mimalloc-2.0",
				"-L-lz",
				"-L-lbz2",
				"-L-ldeflate",
				"-L-llzma",
				"-L-lcurl", 
				"-L-lssl", 
				"-L-lssh2", 
				"-L-lcrypto", 
				"-L-lunwind"
			]
		}
	]
}
